<span><%=form_tag song_review_vote_path(song, review), class: "votes-form" do %>
  <%=hidden_field_tag "review_id", review.id %>
  <%=hidden_field_tag "vote", 1%>
  <%= button_tag type: 'submit' do %>
   <%= icon('thumbs-up') %>
  <% end %>
<% end%>

<%=form_tag song_review_vote_path(song, review), class: "votes-form" do %>
  <%=hidden_field_tag "review_id", review.id %>
  <%=hidden_field_tag "vote", -1%>
  <%= button_tag type: 'submit' do %>
   <%= icon('thumbs-down', class: "fa-flip-horizontal") %>
  <% end %></span>
<% end%>
