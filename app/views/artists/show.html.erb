<div class="container-fluid blackout">
<h1 id="artist_show_name"><%=@artist.name%>'s Top Songs</h1>
<br>
  <div class="row artist_show_content_head">
    <div class="col-md-1">
    </div>
    <div class="col-md-10">

    <div class="col-md-4">
      <h3>Song Name</h3>
    </div>
    <div class="col-md-4">
      <h3>Average Review Score</h3>
    </div>
    <div class="col-md-4">
    <h3>Last Review</h3>
    </div>
  </div>
  <div class="col-md-1">

  </div>
</div>

  <%@artist_songs_ordered_by_review.each do |song|%>
    <div class="row">
    <div class="col-md-1">
    </div>
    <div class="col-md-10">
      <div class="row artist_show_content">
        <div class="col-md-4">
          <h4>
            <%= link_to song.name, song_path(song)%>
          </h4>
        </div>
        <div class="col-md-4">
          <h4><%= render partial: "/application/stars", locals: {score: song.avg}%></h4>
        </div>
        <div class="col-md-4">
          <p>Reviewer: <%=link_to song.reviews.last.account.user_name, show_profile_path(song.reviews.last.account)%></p>
          <p>Score: <%=song.reviews.last.song_score%></p>
          <p>Content: <%=song.reviews.last.content%></p>
          <p>Posted On: <%=song.reviews.last.created_at.strftime("%l:%M %P, %B %-d, %Y")%></p>
        </div>
      </div>
    </div>
  <div class="col-md-1">
  </div>
</div>
 <%end%>
</div>
