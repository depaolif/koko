<script type="text/javascript">
$(document).ready(function() {
  $('#search-field').keydown(function() {

    var empty = false;

    if ($('#search-field').val().length == 0) {
            empty = true;
        }
      if (empty) {
          $('#search-submit').attr('disabled', 'disabled');
      } else {
          $('#search-submit').removeAttr('disabled');
      }
  });
});
</script>

