<div class="container-fluid">
  <div class="row">
    <%if logged_in?%>

    <!-- Trending Songs -->
    <div class="col-md-4 trending-songs-wrapper">
      <%= render partial: "trending_songs", locals: {ordered_songs_hash: @ordered_songs_hash} %>
    </div>
    <!-- Friends Activity  -->
    <div class="col-md-8 right-div">
      <div class="col-md-12 dashboard-right-col">
        <%= render partial: "friends_activity", locals: {friends_reviews: @friends_reviews} %>

      <!-- Suggestions -->
        <%= render partial: "suggestions", locals: {final_array: @final_array} %>
      </div>
    </div>

    <!-- If User Not Logged In -->


    <%else%>

    <!--- Trending Songs --->

      <div class="col-md-4 trending-songs-wrapper">
        <%= render partial: "trending_songs", locals: {ordered_songs_hash: @ordered_songs_hash} %>
      </div>
      <!--- log in --->

      <div class="col-md-8 right-div">
          <h2>Log in for personalized suggestions!</h2>
        <div class="col-md-12 dashboard-right-col">
        </div>
      </div>



    <% end %>
  </div> <!-- big row -->
</div> <!-- container fluid -->
