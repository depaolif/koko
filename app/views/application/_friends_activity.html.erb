<div class="col-md-6 no-pad-dash">
  <div class="col-md-12">
    <div class="row">
      <h1 class="dashboard-title">Friend Activity</h1>
    </div>
  </div>

  <div class="col-md-12 friends-dash">
    <%if friends_reviews.count > 0%>
  <div class="row">
    <div class="col-md-4">
      <h4 class="dashboard-sub-title">Song</h4>
     </div>
     <div class="col-md-5">
      <h4 class="dashboard-sub-title">What They're Saying</h4>
     </div>
     <div class="col-md-3">
      <h4 class="dashboard-sub-title">Score</h4>
     </div>
  </div>
        <%friends_reviews.each do |review|%>
        <div class="row">
          <div class="col-md-4">
            <p class="dashboard-text">
              <%=link_to review.song.name, song_path(review.song)%>
            </p>
          </div>
          <div class="col-md-5">
            <p class="dashboard-text">
                <%= review.content == "" ? "[No content]": review.content %>
                <br>
                Reviewer: <%=link_to review.account.user_name, show_profile_path(review.account)%>
            </p>
          </div>
          <div class="col-md-3">
          <p style="font-size: 10px" class="dashboard-text">
            <%= render partial: "application/stars", locals: {score: review.song_score} %>
          </p>
        </div>
      </div>
        <%end%>
    <%else%>
      <div class="col-md-12">
        <p class="dashboard-no-result">Add <%= link_to "Friends", friends_path(current_user.id), id:"no_friend_link" %> to unlock this feature!</p>
      </div>
    <%end%>
  </div>
</div> <!-- col md 6 -->
